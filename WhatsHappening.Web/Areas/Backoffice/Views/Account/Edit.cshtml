@model WhatsHappening.Web.Areas.Backoffice.Models.Account.AccountEditModel
@{
    ViewBag.Title = "Backoffice - Edit Account";
}

<h2>Edit Account</h2>


<div class="spacer2">
    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { id = "FormEditAccount", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ApplicationUser.Id)

        <div class="form-group">
            <div class="col-md-2 text-right">@Html.LabelFor(model => model.ApplicationUser.UserName, new { @class = "control-label" })</div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ApplicationUser.UserName)
                @*@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName" })
                    @Html.ValidationMessageFor(p => p.UserName)*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">@Html.LabelFor(model => model.ApplicationUser.Email, new { @class = "control-label" })</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ApplicationUser.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(p => p.ApplicationUser.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">@Html.LabelFor(model => model.ApplicationUser.Roles, new { @class = "control-label" })</div>
            <div class="col-md-4">
                @Html.EditorFor(p => p.ApplicationUser.Roles)
            </div>
        </div>


        <div class="form-group text-right">
            <a href='@Url.Action("Index", "Account")' class="btn btn-default btn-lg" role="button">Cancel</a>
            <button type="submit" class="btn btn-success btn-lg">Save</button>
        </div>

    }
</div>
